<div class="dashboard-container">
  <div class="row">
    <div class="sidebar col-2 col-sm-1">
      <%= render 'shared/sidebar' %>
    </div>

    <div class="col-10">
      <div class="inner-navbar">
        <%= render 'shared/navbar' %>
      </div>

      <div class="container" >
        <div class="row">
          <div class="col-12" %>
            <h1><%= @task.description %></h1>

            <%= render 'form', task: @task %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
