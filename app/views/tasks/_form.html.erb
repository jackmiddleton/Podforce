<%= simple_form_for [@task] do |t| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :description %>
      <%= f.input :priority %>
      <%= f.input :contact_id %>
      <%= f.input :date_time %>
      <%= f.input :ownership %>
      <%= f.input :complete %>
      <%= f.input :category %>
    </div>

    <div class="form-actions btn btn-primary">
      <%= f.button :submit %>
    </div>
  <% end %>
