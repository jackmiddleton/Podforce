<div class="container mt-3" >
  <div class="row justify-content-center">
    <div class="col-12">
        <h1>Tasks for <%= @task.description %> </h1>
        </div>
        <%= simple_form_for([@task], remote: true) do |f| %>
          <%= f.input :description, as: :text %>
          <%= f.button :submit, class: "btn btn-primary" %>
        <% end %>
        </div>
    </div>
  </div>
</div>
