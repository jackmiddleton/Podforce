<div class="dashboard-container">
  
  <div class="sidebar col-sm-2">
    <%= render 'shared/sidebar' %>
    <%= @user.email %>
  </div>

  <div class="col-sm-10">
    <div class="inner-navbar">
      <%= render 'shared/navbar' %>
    </div>

    <div class="d-flex container mt-3">

      <div class="col-4">
        <div class="dashboard-reviews">
          <h1>Recent Reviews</h1>
        </div>
        <div class="dashboard-podcasts">
          <h1>The LiveUltra Podcast</h1>
        </div>     
      </div>

      <div class="col-8">
        <div class="dashboard-tasks">
          <h1>My Tasks</h1>
          <div class="d-flex justify-content-end mt-3 mr-3">
            <%= link_to "New Task", new_task_path, class: "btn secbtn" %>
          </div>
          <div class="row">
            <% @tasks.each do |task| %>
              <div class="col-12 mt-3">
                <div class="card">
                  <div class="card-body d-flex justify-content-between">
                    <div>
                      <%= button_to toggle_completed_task_path(task), method: :put, remote: true, class: "checkbutton" do %>
                      <i class="far <%= task.complete ? "fa-check-square" : "fa-square" %>"></i>
                        <%#= f.input_field :complete, as: :boolean, boolean_style: :inline, checked_value: true, unchecked_value: false %>
                        <%#= f.submit %>
                      <% end %>
                    </div>
                     
                    <div>
                      <%= link_to(task) do %>
                        <% if task.complete %>
                          <del class="card-title"><%= task.description %></del>
                        <% else %>
                          <p class="card-title"><%= task.description %></p>
                        <% end %>
                      <% end %>
                    </div>
                    
                    <div>
                      <p class="card-text"> <%= task.date_time %></p>
                    </div>
               
                  </div>
                </div>
              </div>
            <% end %>
          </div>
          
          
      </div>
    
    </div>
  </div>
</div>
