<div class="dashboard-container">
  
  <div class="sidebar col-sm-2">
    <%= render 'shared/sidebar' %>
    <%= @user.email %>
  </div>

  <div class="col-sm-10">
    <div class="inner-navbar">
      <%= render 'shared/navbar' %>
    </div>

    <div class="d-flex container mt-3">

      <div class="col-4">
        <div class="dashboard-reviews">
          <h1>Recent Reviews</h1>
        </div>
        <div class="dashboard-podcasts">
          <h1>The LiveUltra Podcast</h1>
        </div>     
      </div>

      <div class="col-8">
        <div class="dashboard-tasks">
          <h1>My Tasks</h1>
        
          <%= link_to "New Task", new_task_path, class: "btn secbtn" %>
          <div class="row">
            <% @tasks.each do |task| %>
              <div class="col-12 mt-3">

                <div class="card">

                  <div class="card-body d-flex justify-content-between">
                    <p class="card-title"><%= task.description %></p>
                    <%= link_to "Show Task", task_path(task) %>
                    
                    <p class="card-text"> <%= task.date_time %></p>
                    
                    <i class="far <%= task.complete ? "fa-check-square" : "fa-square" %>"></i>
                  </div>
                </div>
              </div>
            <% end %>

        </div>
      </div>
    
    </div>
  </div>

</div>

