<div class="dashboard-container">
  <div class="row">
    <div class="sidebar col-2 col-sm-2">
      <%= render 'shared/sidebar' %>
      <%= @user.email %>
    </div>

    <div class="col-10 p-5 container">
      <div class="row inner-navbar" style="height: 10%">
          <%= render 'shared/navbar' %>
      </div>

      <div class="row" style="height: 90%">
        <div class="col-4">
          <div class="dashboard-reviews justify-content-end">
              <h1 id="header"><strong>Recent Review </strong></h1>
              <div class="col-12 ">
                  <div class="card">
                    <div class="card-body d-flex">
                      <p class="card-title"> Comment</p>
                      <p class="card-text"> Rating</p>
                    </div>
                  </div>
              </div>
          </div>
          <div class="dashboard-podcasts justify-content-end">
            <h1 id="special-heather">The LiveUltra Podcast</h1>
          </div>
        </div>

        <div class="col-8">
          <div class="dashboard-tasks">
            <h1 id="header"><strong>My Tasks</strong></h1>
            <div class="row">
              <% @tasks.each do |task| %>
                <div class="col-12">
                  <div class="card">
                    <div class="card-body d-flex">
                      <i class="far <%= task.complete ? "fa-check-square" : "fa-square" %>"></i>
                      <p class="card-title"><%= task.description %></p>
                      <%= link_to "Show Task", task_path(task) %>
                      <p class="card-text"> <%= task.date_time %></p>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
              <div id="button" class="d-flex justify-content-center">
                <%= link_to "+", new_task_path, class: "btn secbtn" %>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>