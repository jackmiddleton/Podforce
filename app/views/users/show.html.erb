          </div>
        </div>

        <div class="col-8">
          <div class="dashboard-tasks">
            <h1 id="header"><strong>My Tasks</strong></h1>
            <div class="row">
              <% @tasks.each do |task| %>
                <div class="col-12 mt-3">
                  <div class="card-mini-task">
                    <div class="card-body d-flex justify-content-between">
                      <div class="p-3">
                        <%= button_to toggle_completed_task_path(task), method: :put, remote: true, class: "checkbutton" do %>
                          <i class="far <%= task.complete ? "fa-check-square" : "fa-square" %>"></i>
                            <%#= f.input_field :complete, as: :boolean, boolean_style: :inline, checked_value: true, unchecked_value: false %>
                            <%#= f.submit %>
                        <% end %>
                      </div>

                      <div class="d-flex justify-content-around p-3">
                        <%= link_to(task) do %>
                          <% if task.complete %>
                            <del id="card-title-design-underline" class="card-title"><%= task.description %></del>
                          <% else %>
                            <p id="card-title-design" class="card-title"><%= task.description %></p>
                          <% end %>
                        <% end %>
                      </div>

                      <div class="p-3">
                        <% if task.contact.present? %>
                          <% if task.contact.photo.present? %>
                            <%= cl_image_tag task.contact.photo.key, class:"picture"%>
                          <% end %>
                        <% end %>
                      </div>

                      <div class="ml-auto p-3">
                        <% if task.complete %>
                          <p id="card-title-design-underline" class="card-text"> <%= task.date_time %></p>
                        <% else %>
                          <p  class="card-text"> <%= task.date_time %></p>
                        <% end %>
                      </div>

                    </div>
                  </div>
                </div>
              <% end %>
              <div id="button" class="d-flex justify-content-center">
                <%= link_to "+", new_task_path, class: "btn secbtn" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
