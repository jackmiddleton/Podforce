<div class="container mt-3 style="padding: 90px" >
  <div class="row justify-content-center">

    <div class="col-12" %>

    <%= link_to "New Contact", new_contact_path %>

      <h1>Contact's</h1>
      <div class="row">
        <% @contacts.each do |contact| %>
          <div class="col mt-3">

            <div class="card">

              <div class="card-body">
                <h5 class="card-title"><%= contact.first_name %> <%= contact.last_name %></h5>
                <h2>Contact Information</h2>
                <p class="card-text"><%= contact.email %></p>
                 <p class="card-text"><%= contact.instagram %></p>
                  <p class="card-text"><%= contact.twitter %></p>
                   <p class="card-text"><%= contact.linkedin %></p>

                   <%= link_to "Show Contact", contact_path(contact) %>
                   <%= link_to "Edit Contact", edit_contact_path(contact) %>
                   <%= link_to "Delete", contact_path(contact), method: :delete, remote: true, data: { confirm: 'Are you sure?' }%>


              </div>
            </div>
          </div>
        <% end %>
      </div>

      </div>
    </div>
  </div>
</div>

