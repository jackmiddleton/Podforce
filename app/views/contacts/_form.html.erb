
<%= simple_form_for @contact do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="contacts labels">
    <div class="form-inputs">
      <div class="d-flex justify-content-between">
        <span class="input-name"> <%= f.input :first_name %> </span>
        <span class="input-name"> <%= f.input :last_name %> </span>
        <%= f.input :last_name %>
      </div>
      <div>
        <%= f.input :email %>
      </div>
      <div class="d-flex justify-content-between">
        <%= f.input :instagram %>
        <%= f.input :twitter %>
        <%= f.input :linkedin %>
      </div>
      <div class="d-flex justify-content-between">
        <%= f.input :photo, as: :file %>  
          <input type="submit" name="commit" value="Create Contact" class="logbtn" data-disable-with="Create Contact">
        
        <span class="logbtn"><%= link_to "Back", contacts_path %></span>
      </div>
    
    </div>
  </div>
<% end %>
